<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="2dp"
    android:layout_marginBottom="2dp"
    android:elevation="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_blue"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/textExtracao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Extração nº: 5429"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Data: 06/10/2019"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textPremio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Prêmio: Carro Hb20 Style 1.0 2019"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textGanhador"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Nome ganhador: Roberto Ruan Almeida Leite"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textNumero"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Número sorteado: 256"
            android:textColor="@android:color/white"
            android:textSize="18sp" />
    </LinearLayout>
</androidx.cardview.widget.CardView>
